<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4FA1E3"
    tools:context=".SegundaTela">

    <TextView
        android:id="@+id/textView"
        android:layout_width="391dp"
        android:layout_height="127dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#000000"
        android:text=" Infraestrutura - Defeitos nas vias pavimentadas"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="82dp"
        android:layout_height="143dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FF0000"
        android:textColorHint="#F40000"
        android:textColorLink="#E10000"
        android:textSize="145sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-black"
        android:text="E.I.T.ARecife"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="213dp"
        android:layout_height="63dp"
        android:fontFamily="sans-serif-black"
        android:text="Agilidade"
        android:textColor="#FF0000"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="178dp"
        android:layout_height="50dp"
        android:layout_marginBottom="212dp"
        android:backgroundTint="#F8FAFB"
        android:drawableTint="#2196F3"
        android:fontFamily="sans-serif-black"
        android:foregroundTint="#2196F3"
        android:shadowColor="#2196F3"
        android:text="Continuar"
        android:textColor="#000000"
        android:textColorHighlight="#F7FCFF"
        android:textColorHint="#2196F3"
        android:textColorLink="#2196F3"
        android:textSize="18sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:layout_constraintVertical_bias="0.422"
        app:rippleColor="#2196F3"
        app:strokeColor="#000000"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="213dp"
        android:layout_height="63dp"
        android:fontFamily="sans-serif-black"
        android:text="Desafio 3 "
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.377" />
</androidx.constraintlayout.widget.ConstraintLayout>